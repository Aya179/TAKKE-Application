@model Takke.Models.Car

@{ ViewData["Title"] = "Delete"; }


<div class="row">

    <div class="col-12">
        <div class="mt-3 mb-3">
            <span class="lead">
                هل تريد الحذف؟
            </span>
            <div class="d-inline float-right">
                <a asp-action="Index"><i class="fa fa-arrow-left back-icon fa-2x"></i> </a>
            </div>
        </div>

    
            <table class="table">
                <tr>
                    <th class="w-25">
                        @Html.DisplayNameFor(model => model.CarNumber)
                    </th>
                    <td>  @Html.DisplayFor(model => model.CarNumber)</td>
                </tr>
                <tr>
                    <th class="w-25">
                        @Html.DisplayNameFor(model => model.Driver.DriverName)
                    </th>
                    <td>  @Html.DisplayFor(model => model.Driver.DriverName)</td>
                </tr>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Status)
                    </th>
                    <td>  @Html.DisplayFor(model => model.Status)</td>
                </tr>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Madeyear)
                    </th>
                    <td> @Html.DisplayFor(model => model.Madeyear) </td>
                </tr>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Manufacture)
                    </th>
                    <td> @Html.DisplayFor(model => model.Manufacture) </td>
                </tr>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.TarvelDistance)
                    </th>
                    <td> @Html.DisplayFor(model => model.TarvelDistance) </td>
                </tr>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.CarModel)
                    </th>
                    <td> @Html.DisplayFor(model => model.CarModel) </td>
                </tr>
           
            </table>
 

    </div>
    <div class="mt-2 mr-4">
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-outline-danger" />
            <i class="far fa-trash-alt"></i>
            حذف
        </form>
    </div>
</div>
