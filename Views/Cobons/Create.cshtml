@model Takke.Models.Cobon

@{
    ViewData["Title"] = "Create";
}


<div class="row">
    <div class="col-12">

        <div class="card card-primary border-0">
            <div class="card-header">
                <h3 class="card-title">إنشاء كوبون</h3>


                <div class="d-inline">
                    <a asp-action="Index"><i class="fa fa-arrow-left fa-lg"></i> </a>
                </div>

            </div>

            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="card-body">
                    <div class="row justify-content-center">
                        <div class="col-5">
                            <div class="form-group">
                                <label asp-for="CobonValue" class="control-label"></label>
                                <input asp-for="CobonValue" class="form-control" />
                                <span asp-validation-for="CobonValue" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-5">

                            <div class="form-group">
                                <label asp-for="Cobontype" class="control-label"></label>
                                <input asp-for="Cobontype" class="form-control" />
                                <span asp-validation-for="Cobontype" class="text-danger"></span>
                            </div>
                        </div>
                    

                        <div class="col-5">
                            <div class="form-group">
                                <label asp-for="ClientId" class="control-label"></label>
                                <select asp-for="ClientId" class="form-control" asp-items="ViewBag.ClientId"></select>
                            </div>
                        </div>
                        <div class="col-5">
                            <div class="form-group">
                                <label asp-for="CreationDate" class="control-label"></label>
                                <input asp-for="CreationDate" class="form-control" />
                                <span asp-validation-for="CreationDate" class="text-danger"></span>
                            </div>
                        </div>
                        
                    </div>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-outline-primary">
                <i class="fa fa-plus"></i>
                إنشاء
            </button>
        </div>
        </form>
    </div>
</div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
